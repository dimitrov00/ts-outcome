{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
